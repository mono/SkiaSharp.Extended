<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:SkiaSharp.Extended.UI.Controls"
                    xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
                    x:Class="SkiaSharp.Extended.UI.Controls.Themes.SKSignaturePadViewResources">

    <!-- the control template for SKSignaturePadView -->
    <ControlTemplate x:Key="SKSignaturePadViewControlTemplate">
        <skia:SKCanvasView x:Name="PART_DrawingSurface" />
    </ControlTemplate>

    <!-- the explicit style that allows for extension -->
    <Style x:Key="SKSignaturePadViewStyle" TargetType="local:SKSignaturePadView">
        <Setter Property="ControlTemplate"
                Value="{StaticResource SKSignaturePadViewControlTemplate}" />
    </Style>

    <!-- the implicit style that applies to all controls -->
    <Style TargetType="local:SKSignaturePadView"
           BasedOn="{StaticResource SKSignaturePadViewStyle}" />

</ResourceDictionary>
