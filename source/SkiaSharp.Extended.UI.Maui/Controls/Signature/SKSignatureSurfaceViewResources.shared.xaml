<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:local="clr-namespace:SkiaSharp.Extended.UI.Controls"
                    xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
                    x:Class="SkiaSharp.Extended.UI.Controls.Themes.SKSignatureSurfaceViewResources">

    <!-- the control template for SKSignatureSurfaceView -->
    <ControlTemplate x:Key="SKSignatureSurfaceViewControlTemplate">
        <skia:SKCanvasView x:Name="PART_DrawingSurface" />
    </ControlTemplate>

    <!-- the explicit style that allows for extension -->
    <Style x:Key="SKSignatureSurfaceViewStyle" TargetType="local:SKSignatureSurfaceView">
        <Setter Property="ControlTemplate"
                Value="{StaticResource SKSignatureSurfaceViewControlTemplate}" />
    </Style>

    <!-- the implicit style that applies to all controls -->
    <Style TargetType="local:SKSignatureSurfaceView"
           BasedOn="{StaticResource SKSignatureSurfaceViewStyle}" />

</ResourceDictionary>