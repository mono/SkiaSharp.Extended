<Project Sdk="MSBuild.Sdk.Extras/3.0.44">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <TargetFrameworks Condition="$(IsMacOS) or $(IsWindows)">$(TargetFrameworks);MonoAndroid10.0;Xamarin.iOS10;Xamarin.Mac20;tizen40</TargetFrameworks>
    <TargetFrameworks Condition="$(IsWindows)">$(TargetFrameworks);uap10.0.16299</TargetFrameworks>
    <AssemblyName>SkiaSharp.Extended.UI.Forms</AssemblyName>
    <RootNamespace>SkiaSharp.Extended.UI.Forms</RootNamespace>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <ReferenceAssemblyTargetFramework>netstandard2.0</ReferenceAssemblyTargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>SkiaSharp.Extended.UI.Forms</PackageId>
    <Title>Additional Controls for SkiaSharp.Views.Forms</Title>
    <Description>This package adds additional controls to SkiaSharp.Views.Forms.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp" Version="2.80.4" />
    <PackageReference Include="SkiaSharp.Views.Forms" Version="2.80.4" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2401" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SkiaSharp.Extended\SkiaSharp.Extended.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.shared.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.shared.*.cs" />
    <EmbeddedResource Include="..\SkiaSharp.Extended.UI\**\*.shared.xaml" />
    <EmbeddedResource Include="..\SkiaSharp.Extended.UI\**\*.shared.*.xaml" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.ref.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.ref.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.android.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.android.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.ios.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.ios.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.Mac')) ">
    <Reference Include="netstandard" Condition=" '$(IsWindows)' == 'true' " />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.macos.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.macos.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('tizen')) ">
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.tizen.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.tizen.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.uwp.cs" />
    <Compile Include="..\SkiaSharp.Extended.UI\**\*.uwp.*.cs" />
  </ItemGroup>

</Project>
