{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/bin/Release/net9.0/**.dll"
          ],
          "src": "../source/"
        }
      ],
      "output": "api",
      "outputFormat": "mref",
      "memberLayout": "separatePages"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "obj/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern",
      "templates/material"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appTitle": "SkiaSharp.Extended",
      "_enableSearch": true,
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/logo.ico",
      "_gitContribute": {
        "repo": "https://github.com/mono/SkiaSharp.Extended"
      },
      "_gitUrlPattern": "github"
    }
  }
}