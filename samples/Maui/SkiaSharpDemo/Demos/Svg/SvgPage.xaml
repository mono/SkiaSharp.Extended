<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
            x:Class="SkiaSharpDemo.Demos.SvgPage"
            Title="SVG (Svg.Skia)">

    <ContentPage Title="Logos" AutomationId="logos.svg"
                 Appearing="OnPageAppearing" SizeChanged="OnPageSizeChanged">
        <ScrollView>
            <views:SKCanvasView PaintSurface="OnPainting" />
        </ScrollView>
    </ContentPage>

    <ContentPage Title="Transparency" AutomationId="opacity.svg"
                 Appearing="OnPageAppearing" SizeChanged="OnPageSizeChanged">
        <ScrollView>
            <views:SKCanvasView PaintSurface="OnPainting" />
        </ScrollView>
    </ContentPage>

    <ContentPage Title="Dashes" AutomationId="dashes.svg"
                 Appearing="OnPageAppearing" SizeChanged="OnPageSizeChanged">
        <ScrollView>
            <views:SKCanvasView PaintSurface="OnPainting" />
        </ScrollView>
    </ContentPage>

</TabbedPage>
