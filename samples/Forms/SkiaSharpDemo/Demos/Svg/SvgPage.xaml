<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
            x:Class="SkiaSharpDemo.Demos.SvgPage"
            Title="SVG (Svg.Skia)">

    <ContentPage Title="Logos" Appearing="OnPageAppearing" AutomationId="logos.svg">
        <views:SKCanvasView PaintSurface="OnPainting" />
    </ContentPage>

    <ContentPage Title="Transparency" Appearing="OnPageAppearing" AutomationId="opacity.svg">
        <views:SKCanvasView PaintSurface="OnPainting" />
    </ContentPage>

    <ContentPage Title="Dashes" Appearing="OnPageAppearing" AutomationId="dashes.svg">
        <views:SKCanvasView PaintSurface="OnPainting" />
    </ContentPage>

</TabbedPage>
